{
  "manifest_version": 3,
  "name": "TeachMe AI",
  "version": "1.0.0",
  "description": "This is a companion tool to give you meaning to sentences and words in context of the webpage.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "public/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "script/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "public/content.html",
        "assets/*",
        "script/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}