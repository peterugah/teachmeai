commands:
  01_install_ollama:
    command: "curl -fsSL https://ollama.com/install.sh | sh"
  02_pull_mistral:
    command: "/usr/local/bin/ollama pull mistral"
  03_pull_nomic_embed:
    command: "/usr/local/bin/ollama pull nomic-embed-text"
  04_enable_ollama:
    command: "systemctl enable ollama"
