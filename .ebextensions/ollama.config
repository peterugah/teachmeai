commands:
  01_install_ollama:
    command: "curl -fsSL https://ollama.com/install.sh | sh >> /var/log/ollama-install.log 2>&1"
  02_pull_mistral:
    command: "PATH=$PATH:/usr/local/bin /usr/local/bin/ollama pull mistral >> /var/log/ollama-pull.log 2>&1"
  03_pull_nomic_embed:
    command: "PATH=$PATH:/usr/local/bin /usr/local/bin/ollama pull nomic-embed-text >> /var/log/ollama-pull.log 2>&1"
  04_enable_ollama:
    command: "systemctl enable ollama >> /var/log/ollama-pull.log 2>&1"
