commands:
  01_install_ollama:
    command: |
      curl -fsSL https://ollama.com/install.sh | sh
  02_pull_mistral:
    command: |
      /usr/local/bin/ollama pull mistral
  03_enable_ollama_service:
    command: |
      if command -v systemctl &> /dev/null; then
        sudo systemctl enable --now ollama
      fi
